#!/bin/bash

set -euo pipefail

GORELEASER_VERSION=v0.120.3

cd "$(dirname "$0")/../.." || exit

docker run --rm --privileged \
  -v "$PWD":/flipt \
  -v /var/run/docker.sock:/var/run/docker.sock \
  -w /flipt \
  -e GITHUB_TOKEN \
  -e DOCKER_USERNAME \
  -e DOCKER_PASSWORD \
  goreleaser/goreleaser:"$GORELEASER_VERSION"-cgo --rm-dist
